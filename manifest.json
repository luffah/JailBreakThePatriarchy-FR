{
  "name": "Au revoir patrie",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Extension d'inversion du genre dans tout les textes en fran√ßais. (Fork of Jailbreak the Patriarchy)",
  "background": {
    "page": "background.html"
  },
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" },
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "browser_action": {
    "default_icon": "icon19.png",
    "default_title": "Changer le genre"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["ressources.js","myscript.js","button.js"],
      "run_at" : "document_end"
    }
  ],
  "content_security_policy": "default-src 'none'; script-src 'self'",
  "options_page": "options.html"
}
